<%i=0%>

  <%if !businesses[0].nil? %>
  <div class="card-container-noside">
    <div class="heading" id="3"><%= text %></div>
    <%for i in 1..6 do%>

    <%= link_to business_path(businesses[i]), class: "link-to-txt" do %>
        <div class="card-container-item">
          <div class="card">
            <%= cl_image_tag businesses[i].photo.key, class:"cl-img" %>
            <div class="card-infos">
              <div>
                <h2><%= businesses[i].name %></h2>
                <p class="green"><%= businesses[i].category.category_name %></p>
              </div>
              <p class="card-empl"><u><%= businesses[i].employee_no %></u> people work here</p>
              <div class="discount-bordered">
                <% if businesses[i].business_offers[0] %>
                  <div class="discount-bordered-inside"> <%= businesses[i].business_offers[0].discount %>%</div>
                <% end %>
                </div>
            </div>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>


<div class="centerd-btn-layer mt-4 mb-4">
  <%= link_to businesses_path, class: "link-to" do %>
  <div class="button-primary">View All</div>
  <% end %>
</div>
<%end%>

