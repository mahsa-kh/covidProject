

<%= render 'shared/navbar-home' %>
<div class="line"></div>

    <%if orderView %>
      <div class="srch-bar">
        <%= form_tag orders_path, method: :get do %>
          <%= text_field_tag :order_query,
            params[:order_query],
            class: "txtfld-ghost mt-2",
            placeholder: "Find an order"
          %>
          <%= button_tag :submit, class: "button-secondary-xs ml-2" do %>
            <img src="<%= asset_path('search.svg') %>" alt="">
          <%end%>
        <% end %>
      </div>
    <%end%>

    <%if !orderView%>
    <div class="srch-bar"></div>
    <%end%>

    <div class="page-container">
      <div class="sidebar">
        <div class="item-box-up">
          <div class="up-spc">
            <%= link_to "Your Profile", edit_user_registration_path, class: "link-to" %>
          </div>
          <div class="up-spc">
            <%= link_to "Supported Businesses", businesses_helped_path, class: "link-to" %>
          </div>
          <div class="up-spc">
            <%= link_to "Transactions History", orders_path, class: "link-to" %>
          </div>
        </div>
    <%if orderView %>
        <div class="item-box-down">
          <div class="down-ttl">FILTER:</div>
          <div class="down-spc stl">
           kjgku
          </div>
          <div class="down-spc stl">busness offer 1</div>
          <div class="down-spc stl">busness offer 1</div>
          <div class="down-spc stl">busness offer 1</div>
        </div>
    <%end%>
      </div>
    <%if orderView %>
      <div class="page-body-table">
        <div class="order-cell" style=" font-weight: bold;width: 140px !important;">ORDER NUMBER</div>
        <div class="order-cell" style="font-weight: bold; width: 110px !important;">ORDER DATE</div>
        <div class="order-cell" style="font-weight: bold; width: 120px !important;">EXPIRY DATE</div>
        <div class="order-cell" style="font-weight: bold; width: 90px !important;">TOTAL</div>
        <div class="order-cell" style="font-weight: bold; width: 140px !important;">PAYMENT STATUS</div>
        <div class="order-cell" style="font-weight: bold; width: 160px !important;">CONFIRMATION NO.</div>
        <div class="order-cell" style="font-weight: bold; width: 130px !important;">PACK QUANTITY</div>
        <div class="order-cell" style="font-weight: bold;">GIFT</div>


            <% orders.each do |order|%>
            <div class="order-cell" style="width: 130px !important;"><%= order.id %></div>
            <div class="order-cell" style=" width: 110px !important;"><%= order.order_date %></div>
            <div class="order-cell" style=" width: 110px !important;"><%= order.exp_date %></div>
            <div class="order-cell" style=" width: 70px !important;"><%= order.total_amount_cents %></div>
            <div class="order-cell" style=" width: 140px !important;"><%= order.state %></div>
            <div class="order-cell" style=" width: 160px !important;"><%= order.confirmation_no %></div>
            <div class="order-cell" style=" width: 130px !important;"><%= order.order_items.count %> </div>
            <div class="order-cell" style=""><% if order.gift %> <i class="fas fa-gift" data-toggle="modal" data-target="#exampleModal"></i> <%end%>
            </div>

            <%end%>
      </div>
    <%end%>
        <%if card %>
      <div class="page-body-card">
        <div class="card-container-noside">

          <% businesses.each do |business| %>
          <%= link_to business_path(business), class: "link-to" do %>
              <div class="card-container-item">
                <div class="card">
                  <img src=<%= asset_path('gym1.jpg')%> >
                  <div class="card-infos">
                    <div>
                      <h2><%= business.name %></h2>
                      <p class="green">Thanks! You helped <%= business.employee_no %> who work here!</p>
                    </div>
                    <div class="discount-bordered">
                      <div class="discount-bordered-inside">
                        <img src=<%= asset_path('check.svg')%> >
                      </div>
                      </div>
                  </div>
                </div>
              </div>
            <% end %>
          <% end %>
        </div>
      </div>
    <%end%>
    </div>



