<div class="container-fluid">
   <div class="row">
    <div class="col-md-2">
      <h3 class="mt-4 ml-4">CATEGORIES</h3>
    </div>
    <div class="col-md-10">
     <h3 mt-4></h3>
    </div>
  </div>
  <div class="row">
    <div class="col-md-2">
      <div class="content-container mt-5">
        <% Category.all.each do |category|%>
        <div class="cat-content ml-4">
           <%= link_to businesses_path(category: category.category_name), class: "link-to", method: :get do %>
              <p mt-4><%= category.category_name %></p>
            <%end%>
        </div>
        <% end %>
      </div>
    </div>
    <div class="col-md-10">
      <div class="card-container-compact mt-4">
        <% businesses.each do |business| %>
        <%= link_to business_path(business), class: "link-to" do %>
          <div class="card-container-item">
            <div class="card">
              <img src=<%= asset_path('cafe1.jpg')%> >
              <div class="card-infos">
                <div>
                  <h2><%= business.name %></h2>
                  <p><%= business.category.category_name %></p>
                </div>
                <p class="card-empl"><u><%= business.employee_no %></u> people work here</p>
                <% if business.business_offers[0] %>
                  <h2 class="card-user discount-bordered"><%= business.business_offers[0].discount %>%</h2>
                <% end %>
              </div>
            </div>
          </div>
          <% end %>
          <% end %>
      </div>

    </div>

  </div>
</div>
