

<div class="main-container-side">
      <div class="cat-content">
        <% Category.all.each do |category|%>

           <%= link_to businesses_path(category: category.category_name), class: "link-to", method: :get do %>
              <p class="cat-box-sm"><%= category.category_name %></p>
            <%end%>

        <% end %>
      </div>
  <div class="card-container-side">
    <% businesses.each do |business| %>
    <%= link_to business_path(business), class: "link-to" do %>
      <div class="card-container-item">
        <div class="card">
          <%= cl_image_tag business.photo.key, class:"cl-img" %>
          <div class="card-infos">
            <div>
              <h2><%= business.name %></h2>
              <p class="green"><%= business.category.category_name %></p>
            </div>
            <p class="card-empl"><u><%= business.employee_no %></u> people work here</p>
            <div class="discount-bordered">
              <div class="discount-bordered-inside"> <%= business.business_offers[0].discount %>%</div>
            </div>
          </div>
        </div>
      </div>
      <% end %>
    <% end %>
  </div>
    <div class="centerd-btn-layer">
      <%= link_to businesses_path, class: "link-to" do %>
      <div class="button-secondary">View All</div>
      <% end %>
  </div>
</div>


