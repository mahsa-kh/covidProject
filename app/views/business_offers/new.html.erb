<div class="container-fluid">
  <div class="row justify-content-center">
    <div class=".col-sm-12 col-md-3">
    </div>
    <div class=".col-sm-12 col-md-1">
    </div>
    <div class=".col-sm-12 col-md-4 d-sm-inline-flex d-md-inline-flex">
      <div class="card-add mt-5 center">

<div class="form-submission">
  <div class=" col-12 col-md-12 col-lg-12">
    <% if @business.business_offers.count <= 3 %>
      <h4>Add maximum 4 offers and click on REGISTER.</h4>
        <p>My Offer:</p>
          <div class="card-form">
            <%= simple_form_for([@business, @business_offer], remote: true, html: {class: 'form-inline d-flex'}) do |business_offer| %>
            <div class = "mr-3"> <%= business_offer.input_field :offer_amount, size: '5', placeholder: 'Offer Amount', class: "txtfld-ghost" %> </div>
            <div class = "mr-3"> <%= business_offer.input_field :discount, size: '30', placeholder: 'Discount', class: "txtfld-ghost" %> </div>
            <%= business_offer.submit "Add" , class: "add-btn ml-3"%>
            <% end %>
    <% else %>
      <p>Maximum of 4 credit offer can be added to your page</p>
    <% end %>
    <%  if @business.business_offers.any? %>
      <%  @business.business_offers.each do |businessoffer| %>
        <div class="amount-discount">

          <div>
            <p> Amount </p>
            <h3> <%= humanized_money_with_symbol(businessoffer.offer_amount) %>  </h3>

          </div>

          <div>
            <p> Discount </p>
            <h3> <%= businessoffer.discount %>% </h3>
          </div>

        </div>
      <% end %>
    <% else %>
      <p> No offers yet </p>
    <%  end %>
  </div>
    <div class="btn-layer">
      <%= link_to "REGISTER", root_path, class: "button-primary" %>
    </div>
</div>

