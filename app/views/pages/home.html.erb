<h1>Pages#home</h1>
<p>Find me in app/views/pages/home.html.erb</p>
This will be moved to nav-bar, to profile<%= link_to "GO to orders", orders_path %>

<p>Enter a keyword!</p>
<%= form_tag businesses_path, method: :get, class: "navbar navbar-light bg-light" do %>
  <%= text_field_tag :query,
    params[:query],
    class: "form-control mr-sm-2",
    placeholder: "enter a keyword"
  %>
  <%= submit_tag "Search", class: "btn btn-outline-success my-2 my-sm-0" %>
<% end %>


<% @businesses.each do |business| %>


<div class="card" style="width: 18rem;">
  <img class="card-img-top" src="..." alt="Card image cap">
  <div class="card-body">
    <p class="card-text"><%= business.description %></p>
    <p><strong><%= business.name %></strong></p>
    <p><strong><%= business.category.category_name %></strong></p>
    <p><b><%= business.business_offers[0].discount %></b></p>
  </div>
</div>


<% end %>
