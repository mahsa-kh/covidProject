<h1>Businesses#new</h1>
<p>Find me in app/views/businesses/new.html.erb</p>

<%= simple_form_for @business do |f| %>
  <%= f.input :name, placeholder: 'Name of Your Business', error: 'Name is mandatory, please specify one' %>
  <%= f.input :address, placeholder: 'Address of Your Business' %>
  <%= f.input :instagram, placeholder: 'Instagram Profile Link' %>
  <%= f.input :website, placeholder: 'Your Website url' %>
  <%= f.input :photo, as: :file %>
  <%= f.input :category_id, collection: Category.all %>
  <%= f.input :description, as: :text, placeholder: 'Write a catchy description here...', input_html: { maxlength: 200 }, hint: 'Max 200 characters.'  %>
  <%= f.button :submit %>
<% end %>
