<h1>Businesses#new</h1>
<p>Find me in app/views/businesses/new.html.erb</p>

<%= simple_form_for @business do |f| %>
  <%= f.input :name, placeholder: 'Name of Your Business', error: 'Name is mandatory, please specify one', required: true %>
  <%= f.input :address, placeholder: 'Address of Your Business', required: true %>
  <%= f.input :instagram, placeholder: 'Instagram Profile Link', required: true %>
  <%= f.input :website, placeholder: 'Your Website url', required: true %>
  <%= f.input :photo, as: :file, required: true  %>
  <%= f.input :category_id, collection: Category.all, label_method:
              lambda {
               |category| "#{category.category_name}"
              }, required: true %>
  <%= f.input :description, as: :text, placeholder: 'Write a catchy description here...', input_html: { maxlength: 200 }, hint: 'Max 200 characters.', required: true  %>
  <%= f.button :submit %>
<% end %>
