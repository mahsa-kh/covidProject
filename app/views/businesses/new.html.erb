<div class="container" style="margin-top: 100px">
  <h2 style=" margin-left: 30px">Create a new Business</h2>
  <div class="row">
    <div class="col-12 col-md-6 col-lg-6 px-lg-5">
      <div class="form-inputs">
        <%= simple_form_for @business do |f| %>
        <%= f.error_notification %>
        <%= f.input :name, as: :string, placeholder: 'Name of Your Business', error: 'Name is mandatory, please specify one', required: true, input_html: {class: "txtfield"} %>
        <%= f.input :address, required: true, as: :search, input_html: {id: "b_address", class: "txtfield"}, placeholder: 'Address of Your Business' %>
        <%= f.input :instagram, as: :string, placeholder: 'Instagram Profile Link', required: true, input_html: {class: "txtfield"}  %>
        <%= f.input :website, as: :string, placeholder: 'Your Website url', required: true, input_html: {class: "txtfield"}  %>
      </div>
    </div>
    <div class="col-12 col-md-6 col-lg-6 px-lg-5">
      <%= f.input :employee_no, placeholder: 'Number of employee we can help', required: true, input_html: {class: "txtfield"} %>
      <%= f.input :photo, as: :file, required: true, input_html: {class: "txtfield"}   %>
      <%= f.input :category_id, collection: Category.all, label_method:
      lambda {
      |category| "#{category.category_name}"
      }, required: true, input_html: {class: "txtfield"} %>
      <%= f.input :description, as: :text, placeholder: 'Write a catchy description here...', input_html: { maxlength: 200, class: "txtfield" }, hint: 'Max 200 characters.', required: true  %>
      <div class="form-actions">
      <%= f.button :submit,  class: "button-primary"%>
      </div>
      <% end %>
    </div>    
  </div>
</div>
